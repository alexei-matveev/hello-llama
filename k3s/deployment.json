{
   "apiVersion": "v1",
   "items": [
      {
         "apiVersion": "apps/v1",
         "kind": "Deployment",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "replicas": 1,
            "selector": {
               "matchLabels": {
                  "component": "llama-server"
               }
            },
            "template": {
               "metadata": {
                  "labels": {
                     "component": "llama-server"
                  }
               },
               "spec": {
                  "containers": [
                     {
                        "args": [
                           "--model",
                           "/models/Phi-3-mini-4k-instruct-q4.gguf",
                           "--chat-template",
                           "phi3",
                           "--embeddings",
                           "--no-mmap",
                           "--host",
                           "0.0.0.0",
                           "--metrics",
                           "--ctx-size",
                           "2048"
                        ],
                        "env": [
                           {
                              "name": "XXX",
                              "value": "yyy"
                           }
                        ],
                        "image": "localhost/llama-cpp:latest",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "llama-server",
                        "ports": [
                           {
                              "containerPort": 8080
                           }
                        ],
                        "volumeMounts": [
                           {
                              "mountPath": "/models",
                              "name": "llama-models"
                           }
                        ]
                     }
                  ],
                  "volumes": [
                     {
                        "name": "llama-models",
                        "persistentVolumeClaim": {
                           "claimName": "llama-models"
                        }
                     }
                  ]
               }
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "ports": [
               {
                  "port": 80,
                  "targetPort": 8080
               }
            ],
            "selector": {
               "component": "llama-server"
            },
            "type": "ClusterIP"
         }
      },
      {
         "apiVersion": "networking.k8s.io/v1",
         "kind": "Ingress",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "rules": [
               {
                  "host": "llama-server.localhost",
                  "http": {
                     "paths": [
                        {
                           "backend": {
                              "service": {
                                 "name": "llama-server",
                                 "port": {
                                    "number": 80
                                 }
                              }
                           },
                           "path": "/",
                           "pathType": "Prefix"
                        }
                     ]
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "v1",
         "kind": "PersistentVolumeClaim",
         "metadata": {
            "name": "llama-models"
         },
         "spec": {
            "accessModes": [
               "ReadWriteOnce"
            ],
            "resources": {
               "requests": {
                  "storage": "4Gi"
               }
            }
         }
      }
   ],
   "kind": "List"
}
