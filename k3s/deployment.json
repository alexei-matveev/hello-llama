{
   "apiVersion": "v1",
   "items": [
      {
         "apiVersion": "apps/v1",
         "kind": "Deployment",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "replicas": 1,
            "selector": {
               "matchLabels": {
                  "component": "llama-server"
               }
            },
            "template": {
               "metadata": {
                  "labels": {
                     "component": "llama-server"
                  }
               },
               "spec": {
                  "containers": [
                     {
                        "args": [
                           "--model",
                           "/models/phi-3-mini-4k-instruct-q4.gguf",
                           "--alias",
                           "phi-3-mini-4k-instruct-q4",
                           "--chat-template",
                           "phi3",
                           "--embeddings",
                           "--no-mmap",
                           "--host",
                           "0.0.0.0",
                           "--metrics",
                           "--ctx-size",
                           "4096"
                        ],
                        "env": [
                           {
                              "name": "XXX",
                              "value": "yyy"
                           }
                        ],
                        "image": "localhost/llama-cpp:latest",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "llama-server",
                        "ports": [
                           {
                              "containerPort": 8080
                           }
                        ],
                        "volumeMounts": [
                           {
                              "mountPath": "/models",
                              "name": "llama-models"
                           }
                        ]
                     }
                  ],
                  "initContainers": [
                     {
                        "command": [
                           "sh",
                           "-c",
                           "cd /models && [ -f phi-3-mini-4k-instruct-q4.gguf ] || curl -LO https://huggingface.co/microsoft/phi-3-mini-4k-instruct-gguf/resolve/main/phi-3-mini-4k-instruct-q4.gguf"
                        ],
                        "image": "localhost/llama-cpp:latest",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "init-model",
                        "volumeMounts": [
                           {
                              "mountPath": "/models",
                              "name": "llama-models"
                           }
                        ]
                     }
                  ],
                  "volumes": [
                     {
                        "name": "llama-models",
                        "persistentVolumeClaim": {
                           "claimName": "llama-models"
                        }
                     }
                  ]
               }
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "ports": [
               {
                  "port": 80,
                  "targetPort": 8080
               }
            ],
            "selector": {
               "component": "llama-server"
            },
            "type": "ClusterIP"
         }
      },
      {
         "apiVersion": "networking.k8s.io/v1",
         "kind": "Ingress",
         "metadata": {
            "name": "llama-server"
         },
         "spec": {
            "rules": [
               {
                  "host": "phi-3-mini-4k-instruct-q4.localhost",
                  "http": {
                     "paths": [
                        {
                           "backend": {
                              "service": {
                                 "name": "llama-server",
                                 "port": {
                                    "number": 80
                                 }
                              }
                           },
                           "path": "/",
                           "pathType": "Prefix"
                        }
                     ]
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "v1",
         "kind": "PersistentVolumeClaim",
         "metadata": {
            "name": "llama-models"
         },
         "spec": {
            "accessModes": [
               "ReadWriteOnce"
            ],
            "resources": {
               "requests": {
                  "storage": "4Gi"
               }
            }
         }
      },
      {
         "apiVersion": "apps/v1",
         "kind": "Deployment",
         "metadata": {
            "name": "open-webui"
         },
         "spec": {
            "replicas": 1,
            "selector": {
               "matchLabels": {
                  "component": "open-webui"
               }
            },
            "template": {
               "metadata": {
                  "labels": {
                     "component": "open-webui"
                  }
               },
               "spec": {
                  "containers": [
                     {
                        "env": [
                           {
                              "name": "OPENAI_API_BASE_URLS",
                              "value": "http://llama-server/v1"
                           },
                           {
                              "name": "OPENAI_API_KEYS",
                              "value": "secret-key"
                           }
                        ],
                        "image": "ghcr.io/open-webui/open-webui:main",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "open-webui",
                        "ports": [
                           {
                              "containerPort": 8080
                           }
                        ],
                        "volumeMounts": [
                           {
                              "mountPath": "/app/backend/data",
                              "name": "open-webui-data"
                           }
                        ]
                     }
                  ],
                  "volumes": [
                     {
                        "name": "open-webui-data",
                        "persistentVolumeClaim": {
                           "claimName": "open-webui-data"
                        }
                     }
                  ]
               }
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "name": "open-webui"
         },
         "spec": {
            "ports": [
               {
                  "port": 80,
                  "targetPort": 8080
               }
            ],
            "selector": {
               "component": "open-webui"
            },
            "type": "ClusterIP"
         }
      },
      {
         "apiVersion": "networking.k8s.io/v1",
         "kind": "Ingress",
         "metadata": {
            "name": "open-webui"
         },
         "spec": {
            "rules": [
               {
                  "host": "open-webui.localhost",
                  "http": {
                     "paths": [
                        {
                           "backend": {
                              "service": {
                                 "name": "open-webui",
                                 "port": {
                                    "number": 80
                                 }
                              }
                           },
                           "path": "/",
                           "pathType": "Prefix"
                        }
                     ]
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "v1",
         "kind": "PersistentVolumeClaim",
         "metadata": {
            "name": "open-webui-data"
         },
         "spec": {
            "accessModes": [
               "ReadWriteOnce"
            ],
            "resources": {
               "requests": {
                  "storage": "1Gi"
               }
            }
         }
      }
   ],
   "kind": "List"
}
